<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="7dp">

        <LinearLayout
            android:id="@+id/linearLayout_less02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView_less02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lesson_02"
                android:textAlignment="center"
                android:textColor="@color/WET_ASPHALT"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_less02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/PETER_RIVER"
                android:onClick="startLesson02Activity"
                android:text="@string/class_work" />

            <Button
                android:id="@+id/btn_hw02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/teal_700"
                android:onClick="startHomeWork02Activity"
                android:text="@string/home_work" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/WET_ASPHALT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>